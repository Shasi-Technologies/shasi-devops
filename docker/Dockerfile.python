# Dockerfile for Python Flask app
# Expects: app.py and requirements.txt in build context
FROM python:3.9-slim

LABEL maintainer="You <you@example.com>"

ENV PYTHONUNBUFFERED=1
WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 5000

# Run Flask app (ensure app.py runs on 0.0.0.0 and port 5000)
CMD ["python", "app.py"]